---
const { slidesPerView = 1, id } = Astro.props;
---

<div class="swiper" id={id}>
	<div class="swiper-wrapper mb-10">
		<slot />
	</div>
	<div class="swiper-pagination"></div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
<script is:inline src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
<script is:inline define:vars={{ slidesPerView, id }}>
	new Swiper(`#${id}`, {
		loop: true,
		autoplay: { delay: 2000 },
		slidesPerView: slidesPerView,
		spaceBetween: 30,
		pagination: { el: '.swiper-pagination', clickable: true },
	});
</script>
<style is:global>
	:root {
		--swiper-pagination-bullet-inactive-opacity: 0.5;
		--swiper-pagination-bullet-inactive-color: #ffe8a3;
		--swiper-pagination-color: var(--accent-color);
	}
</style>
