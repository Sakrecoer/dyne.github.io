---
import { AstroSeo } from '@astrolib/seo';
import { SITE } from '~/config.mjs';

const {
	title = SITE.name,
	description = '',
	// image: _image = defaultImage,

	canonical,
	noindex = false,
	nofollow = false,

	ogTitle = title,
	ogType = 'website',
} = Astro.props;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

<AstroSeo
	title={title}
	description={description}
	canonical={canonical}
	noindex={noindex}
	nofollow={nofollow}
	openGraph={{
		url: canonical,
		title: ogTitle,
		description: description,
		type: ogType,
		// images: image
		// 	? [
		// 			{
		// 				url: image.toString(),
		// 				alt: ogTitle,
		// 			},
		// 	  ]
		// 	: undefined,
		site_name: 'Dyne.org',
	}}
	twitter={{
		handle: '@DyneOrg',
		site: '@DyneOrg',
		// cardType: image ? 'summary_large_image' : undefined,
	}}
/>
