---
import Menu from '~/components/Menu.astro';
import Logo from './Logo.astro';
const primaryLinks = [
	{
		name: 'Who we are',
		href: '#who-we-are',
	},
	{ name: 'What we do', href: '#what-we-do' },
	{ name: 'What we did', href: '#what-we-did' },
];
const secondaryLinks = [
	{ name: 'Contact', href: '/contact' },
	{ name: 'Careers', href: '/careers' },
	{ name: 'Donate', href: '/donate' },
];
---

<header class="mx-auto w-full">
	<div class="mx-auto w-full lg:flex lg:justify-between max-w-6xl lg:px-4 items-center">
		<div class="flex flex-row items-start justify-between">
			<div>
				<a href="/"> <Logo /></a>
			</div>
			<div class="flex items-center lg:hidden pt-16">
				<button
					type="button"
					class="ml-1.5 text-gray-500 dark:text-gray-400 rounded-lg text-sm p-2.5 inline-flex items-center transition"
					aria-label="Toggle menu"
					data-aw-toggle-menu
				>
					<svg width="54" height="54" viewBox="0 0 54 54" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path
							d="M47.25 40.5H20.25V36H47.25V40.5ZM47.25 29.25H6.75V24.75H47.25V29.25ZM47.25 18H20.25V13.5H47.25V18Z"
							fill="var(--accent-color)"></path>
					</svg>
				</button>
			</div>
		</div>
		<nav
			class="items-center w-full lg:w-auto hidden lg:flex text-gray-600 dark:text-slate-200 h-screen lg:h-auto"
			aria-label="Main navigation"
			id="menu"
		>
			<ul class="lg:hidden text-2xl text-[#FFEEDD] w-full text-right pr-4">
				{
					primaryLinks.map((pl) => (
						<li class="pb-6">
							<a href={pl.href} class="block py-4 px-2 lg:px-4">
								{pl.name}
							</a>
						</li>
					))
				}
			</ul>

			<div class="flex-col lg:items-end mb-4 lg:mb-0">
				<div class="text-accent space-x-10 justify-end flex-col lg:flex">
					{secondaryLinks.map((sl) => <a href={sl.href}> {sl.name} </a>)}
				</div>
				<div class="hidden items-center lg:flex space-x-10 font-medium text-2xl">

					{
						primaryLinks.map((pl) => (
							<a href={pl.href} class="text-black block inline-flex items-center whitespace-nowrap">
								{pl.name}
							</a>
						))
					}
				</div>
			</div>
		</nav>
	</div>
</header>
